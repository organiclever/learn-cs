{
  "name": "learn-cs",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:all",
    "test:all": "npm run algo-ts:test && npm run algo-py:test && npm run algo-go:test && npm run algo-rust:test && npm run algo-java:test",
    "test:watch": "concurrently \"npm run algo-ts:test:watch\" \"npm run algo-py:test:watch\" \"npm run algo-go:test:watch\" \"npm run algo-rust:test:watch\" \"npm run algo-java:test:watch\"",
    "install:all": "npm install && npm run algo-ts:install && npm run algo-py:install && npm run algo-java:install",
    "algo-ts:test": "cd contents/algo-ts && npm test",
    "algo-ts:test:watch": "cd contents/algo-ts && npm run test:watch",
    "algo-ts:install": "cd contents/algo-ts && npm install",
    "algo-py:test": "cd contents/algo-py && . venv/bin/activate && python -m pytest && deactivate",
    "algo-py:test:watch": "cd contents/algo-py && . venv/bin/activate && pytest-watch && deactivate",
    "algo-py:install": "cd contents/algo-py && python -m venv venv && . venv/bin/activate && pip install -r requirements.txt pytest && deactivate",
    "algo-go:test": "cd contents/algo-go && go test ./...",
    "algo-go:test:watch": "cd contents/algo-go && (find . -name '*.go' | entr -c -s 'go test ./...')",
    "algo-rust:test": "cd contents/algo-rust && cargo test",
    "algo-rust:test:watch": "cd contents/algo-rust && (find . -name '*.rs' | entr -c -s 'cargo test')",
    "algo-java:test": "cd contents/algo-java && mvn test",
    "algo-java:test:watch": "nodemon --watch contents/algo-java/src --ext java --exec \"npm run algo-java:test\"",
    "algo-java:install": "cd contents/algo-java && mvn install",
    "format:rust": "find . -name '*.rs' -not -path '*/target/*' | xargs rustfmt",
    "format:go": "find . -name '*.go' | xargs gofmt -w",
    "format:java": "prettier --write --parser java --plugin=prettier-plugin-java \"contents/algo-java/**/*.java\"",
    "format:xml": "prettier --write --parser xml \"**/*.xml\"",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "husky:pre-push": "husky add .husky/pre-push 'npm test'",
    "reset:all": "npm run reset:node && npm run reset:py && npm run reset:java && npm run reset:rust && npm run reset:go && npm run install:all",
    "reset:node": "rm -rf node_modules package-lock.json && cd contents/algo-ts && rm -rf node_modules package-lock.json",
    "reset:py": "rm -rf contents/algo-py/venv",
    "reset:java": "cd contents/algo-java && mvn clean",
    "reset:rust": "cd contents/algo-rust && cargo clean",
    "reset:go": "go clean -cache -testcache -modcache",
    "doctor": "node doctor.js",
    "preinstall": "node doctor.js"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "ts-node": "^10.9.2",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-java": "^2.2.0",
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22"
  },
  "lint-staged": {
    "*.{ts,js,md,json}": "prettier --write",
    "**/*.rs": "npm run format:rust",
    "**/*.go": "npm run format:go",
    "**/*.java": "npm run format:java",
    "**/*.xml": "npm run format:xml"
  },
  "volta": {
    "node": "20.17.0",
    "npm": "10.8.3"
  }
}
