{
  "name": "learn-cs",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:all",
    "test:all": "concurrently \"npm run algo-ts:test\" \"npm run algo-py:test\" \"npm run algo-go:test\"",
    "test:watch": "concurrently \"npm run algo-ts:test:watch\" \"npm run algo-py:test:watch\"",
    "install:all": "npm install && npm run install:algo-ts && npm run install:algo-py",
    "algo-ts:test": "cd contents/algo-ts && npm test",
    "algo-ts:test:watch": "cd contents/algo-ts && npm run test:watch",
    "algo-ts:install": "cd contents/algo-ts && npm install",
    "algo-py:test": "python -m pytest contents/algo-py",
    "algo-py:test:watch": "cd contents/algo-py && . venv/bin/activate && pytest-watch && deactivate",
    "algo-py:install": "cd contents/algo-py && python -m venv venv && . venv/bin/activate && pip install -r requirements.txt && deactivate",
    "algo-go:test": "cd contents/algo-go && go test ./...",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "husky:pre-push": "husky add .husky/pre-push 'npm test'"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "ts-node": "^10.9.2",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^2.8.0",
    "concurrently": "^8.0.1"
  },
  "lint-staged": {
    "*.{ts,js,md,json}": "prettier --write"
  }
}
